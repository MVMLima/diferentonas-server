# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                            controllers.CidadeController.index()

# Cidade
GET        /cidades                     controllers.CidadeController.getCidades()
GET        /cidade/:id                  controllers.CidadeController.get(id: Long)
GET        /cidade/:id/similares        controllers.CidadeController.getSimilares(id: Long)
GET        /cidade/:id/iniciativas      controllers.CidadeController.getIniciativas(id: Long)
# .. OpiniÃµes
POST       /iniciativas/:iniciativa/opinioes    controllers.OpiniaoController.addOpiniao(iniciativa: Long)
GET        /iniciativas/:iniciativa/opinioes    controllers.OpiniaoController.getOpinioes(iniciativa: Long, pagina: Int, tamanhoPagina: Int)

# > deprecated route
GET        /cidade/:id/convenios        controllers.CidadeController.getIniciativas(id: Long)
# < deprecated route

# Mensagens do Governo
GET        /mensagens                   controllers.CoachingController.getMensagens(id: Long ?= 10)
POST       /mensagens                   controllers.CoachingController.save()
DELETE     /mensagens/:id               controllers.CoachingController.delete(id: String)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                controllers.Assets.at(path="/public", file)
